<!-- Loop over each object in the projects array -->
{{#each robots as |robot|}}
  <div class='row mb-4 robot'>
    <div class='col-md-5'>
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        <a href='/robot/{{this.id}}'>{{this.name}}</a>
      </h2>
      <p>Created by {{robot.user.name}} on {{format_date robot.date_created}}</p>
    </div>
    <div class='col-md-7'>
      <p>
        {{robot.description}}
      </p>
    </div>
  </div>
{{/each}}